[colors]
background = #55232323
foreground = #9a9a9a
highlight = #cdcdcd
inversefg = #232323
inversebg = #787878
shadowed = #232323


[bar/bar]
bottom = false
enable-ipc=true
height = 12
width = 100%
offset-x = 0
offset-y = 0
border-size = 0
border-color = ${colors.foreground}
module-margin = 2

fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}

padding = 3
font-0 = fixed:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0

modules-left = bspwm
modules-right = battery0 battery1 pulseaudio time 

scroll-up = bspwn-wsnext
scroll-down = bspwn-wsprev

wm-restack = bspwm
override-redirect = true

tray-position = left
tray-padding = 15


[bar/clock]
bottom = true
monitor = DP-2-2
height = 12
width = 100%
module-margin = 2

enable-ipc=true
wm-restack = bspwm
override-redirect = true

fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = fixed:pixelsize=8;1

modules-right = time 


[module/bspwm]
type = internal/bspwm
format = <label-state>
index-sort = false

enable-click = true
reverse-scroll = false

label-focused = .%name%.
label-focused-foreground = ${colors.inversefg}
label-focused-background = ${colors.inversebg}
label-occupied = %name%
label-occupied-padding = 1
label-empty = 

pin-workspaces = false

[module/time]
type = internal/date
interval = 10
format-margin = 0

time = "%H:%M"
date = "%b %d %a"

label = %date%  %time%
label-foreground = ${colors.foreground}
label-background = ${colors.background}


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume = { <label-volume>
label-volume = %percentage:2:3%%
format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.shadowed}
format-volume-padding = 0
use-ui-max = false
interval = 5

label-muted = x %percentage:2:3%%
label-muted-background = ${colors.inversebg}
label-muted-foreground = ${colors.inversefg}

[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 97

format-charging = (<label-charging>)
format-discharging = .<label-discharging>.
[module/battery1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 97

format-charging = (<label-charging>)
format-discharging = .<label-discharging>.


[settings]
screenchange-reload = true
compositing-background = screen

;compositing-background = xor
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
